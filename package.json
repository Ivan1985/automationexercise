{
  "name": "automationexercise",
  "version": "1.0.0",
  "description": "Playwright tasks",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed --grep '@API|@E2E'",
    "test:chromium": "playwright test --project=chromium --grep '@API'",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile:iphone": "playwright test --project='Mobile Safari'",
    "test:mobile:pixel": "playwright test --project='Pixel 5'",
    "pw:install": "playwright install",
    "pw:report": "playwright show-report",
    "auth:refresh": "node --env-file=.env -e \"import('./global-setup.mjs').then(m=>m.default())\""
  },
  "keywords": [],
  "author": "Ivan Ignjatovic",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "dotenv": "^16.6.1"
  }
}
